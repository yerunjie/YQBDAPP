<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/light_grey"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--<android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_toolbar_height"
            android:background="@color/dark_grey"
            app:navigationIcon="@drawable/ic_back"
            android:paddingRight="@dimen/top_toolbar_padding_horizontal"
            android:id="@+id/tb_title_bar">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="个人信息"
                android:textSize="@dimen/top_toolbar_title_size"/>
    </android.support.v7.widget.Toolbar>-->
    <LinearLayout
            android:background="@color/dark_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_center_portrait"
                android:src="@drawable/head"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="30dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_gravity="center_vertical"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/my_info_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="名字"
                    android:textSize="@dimen/text_size_lg"
                    android:textColor="@color/white"/>
            <TextView
                    android:id="@+id/my_info_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="234455@qq.com"
                    android:textSize="@dimen/text_size_sm"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_info"
                android:paddingLeft="@dimen/top_toolbar_padding_horizontal"
                android:paddingRight="@dimen/top_toolbar_padding_horizontal"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/label_nickname"
                    android:text="昵称"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="暂无"
                    android:id="@+id/my_info_nickname"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:layout_toEndOf="@id/label_nickname"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageButton
                    android:src="@drawable/ic_to"
                    android:id="@+id/btn_nickname"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bottom"
                android:paddingLeft="@dimen/top_toolbar_padding_horizontal"
                android:paddingRight="@dimen/top_toolbar_padding_horizontal"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/label_password"
                    android:text="密码"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageButton
                    android:src="@drawable/ic_to"
                    android:id="@+id/btn_password"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_info"
                android:paddingLeft="@dimen/top_toolbar_padding_horizontal"
                android:paddingRight="@dimen/top_toolbar_padding_horizontal"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/label_sex"
                    android:text="性别"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="暂无"
                    android:id="@+id/my_info_sex"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:layout_toEndOf="@id/label_sex"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageButton
                    android:src="@drawable/ic_to"
                    android:id="@+id/btn_sex"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bottom"
                android:paddingLeft="@dimen/top_toolbar_padding_horizontal"
                android:paddingRight="@dimen/top_toolbar_padding_horizontal"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/label_occupation"
                    android:text="职业"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="暂无"
                    android:id="@+id/my_info_occupation"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:layout_toEndOf="@id/label_occupation"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageButton
                    android:src="@drawable/ic_to"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn_occupation"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bottom"
                android:paddingLeft="@dimen/top_toolbar_padding_horizontal"
                android:paddingRight="@dimen/top_toolbar_padding_horizontal"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/label_telephone"
                    android:text="联系电话"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="暂无"
                    android:id="@+id/my_info_telephone"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:layout_toEndOf="@id/label_telephone"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageButton
                    android:src="@drawable/ic_to"
                    android:id="@+id/btn_telephone"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bottom"
                android:paddingLeft="@dimen/top_toolbar_padding_horizontal"
                android:paddingRight="@dimen/top_toolbar_padding_horizontal"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/label_school"
                    android:text="毕业院校"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="暂无"
                    android:id="@+id/my_info_school"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/top_toolbar_padding_horizontal"
                    android:layout_toEndOf="@id/label_school"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageButton
                    android:src="@drawable/ic_to"
                    android:id="@+id/btn_school"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/optionspicker"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

            <com.bigkoo.pickerview.lib.WheelView
                    android:id="@+id/options1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <com.bigkoo.pickerview.lib.WheelView
                    android:id="@+id/options2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <com.bigkoo.pickerview.lib.WheelView
                    android:id="@+id/options3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>